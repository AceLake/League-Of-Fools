@model League_Of_Fools.Models.ChampionModel

@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <div style="display: flex; align-items: center; margin-bottom: 32px;">
        <div class="champ-head">
            <img src="https://ddragon.leagueoflegends.com/cdn/13.24.1/img/champion/@Model.Image.Full" />
        </div>
        <div>
            <h1>@Model.Name</h1>
            <h2><span class="secondary-text">@Model.Title</span></h2>
        </div>
    </div>

    <div style="margin-bottom: 32px;">
        <h2 style="margin-bottom: 16px;">Champ Lore:</h2>
        <p>@Model.Lore</p>
    </div>
    <div>
        <h2 style="margin-bottom: 16px;">Champion Skins:</h2>

        <div class="d-flex justify-content-center align-items-center">
            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel" style="max-width: 600px;">
                <div class="carousel-indicators">
                    @for (int i = 0; i < Model.Skins.Count; i++)
                    {
                        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@i" class="@((i == 0) ? "active" : "")" aria-label="Slide @(i + 1)"></button>
                    }
                </div>

                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Skins.Count; i++)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img src="https://ddragon.leagueoflegends.com/cdn/img/champion/splash/@(Model.Id)_@(Model.Skins[i].Num).jpg" class="d-block w-100" alt="Skin @(i + 1)" style="max-height: 400px;">
                            <div class="carousel-caption d-none d-md-block">
                                <h5 style="font-size: 14px;">@Model.Skins[i].Name</h5>

                            </div>
                        </div>
                    }
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>

    </div>
</div>



















