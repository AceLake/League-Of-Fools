@model League_Of_Fools.Models.AccountModel

@{
    ViewData["Title"] = "AccountHome";
}

<h1>Account Home</h1>


<div>
    <hr />
    <dl class="row">
        <dd class = "col-sm-10">
            <h2>
                Welcome back 
                @Html.DisplayFor(model => model.Username)
            </h2>
        </dd>
        <dt class="col-sm-6">
            Followed Accounts:
        </dt>
        <dd class="col-sm-10">
        @foreach (var followed in Model.FollowedUsers)
        {   
               @followed 
               <br />
        }
        </dd>
    </dl>
</div>
